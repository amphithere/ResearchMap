// The navagation bar from bootstrap
%nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/", data: {'no-turbolink': 'true'}} Research Map Project
    // Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          %a{:href => "/researches"} Research
        %li
          %a{:href => "/researchers"} Researchers
        - if current_user.try(:admin?) or researcher_signed_in?
          %li
            %a{:href => "/researches/new/", data: {'no-turbolink': 'true'}} New Research
      .navbar-form.navbar-left
        = search_form_for @search do |f|
          .field
            = f.text_field :name_or_location_cont, class: :'form-control'
            .form-group
              %button.btn.btn-default.navbar-right{type: "submit"} Submit

      %ul.nav.navbar-nav.navbar-right
        %li
          %a{:href => "#"} Link
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            - if user_signed_in?
              Logged in as #{current_user.email}
            - elsif researcher_signed_in?
              Researcher logged in as #{current_researcher.email}
            - else
              Log In
            %span.caret
          %ul.dropdown-menu{:role => "menu"}
            - if user_signed_in?
              %li
                = link_to "Your Profile", user_path(current_user.id)
              %li
                = link_to "Sign Out", destroy_user_session_path, method: :delete
            -elsif researcher_signed_in?
              %li
                = link_to "Your Profile", researcher_path(current_researcher.id)
              %li
                = link_to "Sign Out", destroy_researcher_session_path, method: :delete
            - else
              %li
                = link_to "Sign In", new_user_session_path
              %li
                = link_to "Sign up", new_user_registration_path
              %li.divider
              %li
                = link_to "Researcher Sign In", new_researcher_session_path
