= form_for @person do |f|
  - if @person.errors.any?
    #error_explanation
      %h2= "#{pluralize(@person.errors.count, "error")} prohibited this person from being saved:"
      %ul
        - @person.errors.full_messages.each do |msg|
          %li= msg
  
  .field
    = f.label :Name
    = f.text_field :Name, placeholder: 'First and Last Name'
    
  .field
    = f.label :Location
    = f.text_field :Location, id: 'geocomplete', placeholder: 'Type in an address...'
    
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :biography
    = f.text_area :bio
  .actions
    = f.submit 'Save', class: "btn btn-default"
    