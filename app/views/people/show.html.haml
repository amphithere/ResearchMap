.container
  %div.page-header
    %h1 
      = @person.Name
      %small
        = @person.title
  %p#notice
    = notice
  #information
    %strong
      Name:
    = @person.Name
   
    #location
      %strong
        Location:
      = @person.Location
  #bio
    %strong
      Biography:
    %p
      = @person.bio
  
  .text-center
    .btn-group{role: :group}
      = link_to 'Edit', edit_person_path(@person), class: "btn btn-default", method: :get

      = link_to 'Back', root_path, class: "btn btn-default", method: :get

      = link_to 'Delete', @person, method: :delete, :data => { :confirm => 'Are you sure?' }, class: "btn btn-danger"


  #googlemap
    %script{:src=> "//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry", :type => "text/javascript"}
    %script{:src => '//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js', :type =>'text/javascript'}
    =image_tag("http://maps.google.com/maps/api/staticmap?size=850x800&sensor=false&zoom=16&markers=#{@person.latitude}%2C#{@person.longitude}")
  
