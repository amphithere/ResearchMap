= form_for @research do |f|
  - if @research.errors.any?
    #error_explanation
      %h2= "#{pluralize(@research.errors.count, "error")} prohibited this research from being saved:"
      %ul
        - @research.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name
    = f.text_field :name, class: :"form-control"
  .form-group
    = f.label :location
    = f.text_field :location, class: :"form-control"
  .form-group
    = f.label :abstract
    = f.text_area :abstract, class: :"form-control", rows: :"5"
  .form-group
    = f.label :dateStart
    = f.date_select :dateStart, class: :"form-control"
  .form-group
    = f.label :dateEnd
    = f.date_select :dateEnd, class: :"form-control"
  .actions
    = f.submit 'Save', class: :"btn btn-primary"
