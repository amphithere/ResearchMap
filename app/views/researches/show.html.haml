.container
  .page-header
    %h1
      = @research.name
  %p
    %h4
      %u
        Location
        %i.fa.fa-map-marker
    = @research.location
  %p
    %h4
      %u Researcher
    = link_to @research.researcher.name, @research.researcher
  %p
    %h4
      %u Research Start Date
    = @research.dateStart.strftime("%-d %B %Y")
  %p
    %h4
      %u Research End Date
    = @research.dateEnd.strftime("%-d %B %Y")
  %p
    %h4
      %u Available for Visits?
    = translate_bool(@research.available)
  -if @research.available
    %p
      %h4
        %u Week Visit?
      = translate_bool(@research.week)
      %br
      - if @research.weekStart && @research.weekEnd
        %h4
          %u Available from:
        = @research.weekStart.strftime("%-d %B %Y")
        %b to
        = @research.weekEnd.strftime("%-d %B %Y")
    %p
      %h4
        %u Day Visit?
      = translate_bool(@research.day)
      - if @research.day_date
        %p
          %b Available on
          = @research.day_date.strftime("%-d %B %Y")
  %p
    %h3
      %u Abstract
    = @research.abstract

  .btn-block
    - if !@current.nil?
      -if @current.likes?(@research)
        = link_to('Unlike', research_unlike_path(@research), class: :'btn btn-info', method: :post)
      - else
        = link_to research_like_path(@research), class: :'btn btn-info', method: :post do
          %i.fa.fa-thumbs-o-up
          Like
    - else

    %br
    %br
    - if @current.try(:admin?) or current_researcher == @research.researcher
      = link_to 'Edit', edit_research_path(@research), class: :'btn btn-primary', data: {'no-turbolink': 'true'}
