.container
  .page-header
    %h2
      Editing
      = @researcher.name
  = form_for(@researcher) do |f|
    .field
      = f.label :first_name
      = f.text_field :first_name, autofocus: true
    .field
      = f.label :last_name
      = f.text_field :last_name
    .field
      = f.label :email
      = f.email_field :email
    .field
      %br
      = f.label :avatar, "Your Avatar"
      - if @researcher.avatar.url.present?
        = image_tag(@researcher.avatar.url(:thumb))
        = f.check_box :remove_avatar
        = f.label :remove_avatar
        
      = f.file_field :avatar
      = f.hidden_field :avatar_cache
      %br
    .field
      = f.label :headline
      = f.text_field :headline
    .field
      = f.label :bio
      = f.text_area :bio
    .actions
      = f.submit "Update"
  %h3 DELETE THIS ACCOUNT ** DANGER ZONE **
  %p
    DELETE #{button_to 'Delete', @researcher, method: :delete, :data => { :confirm => 'Are you sure?' }, class: "btn btn-danger"}

  = link_to "Back", :back
